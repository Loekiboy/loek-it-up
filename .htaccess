# =====================================================
# Loek it Up — .htaccess
# Security headers, compressie en caching
# =====================================================

# --- Security Headers ---
<IfModule mod_headers.c>
    # HTTPS afdwingen (HSTS) — 1 jaar
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

    # Voorkom clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"

    # Voorkom MIME-type sniffing
    Header always set X-Content-Type-Options "nosniff"

    # Beperkt referrer informatie
    Header always set Referrer-Policy "strict-origin-when-cross-origin"

    # Beperk browser-API's
    Header always set Permissions-Policy "camera=(), microphone=(), geolocation=()"

    # Content Security Policy — conservatief
    # Staat toe: eigen domein, Font Awesome (CDN), Supabase, QR code API
    Header always set Content-Security-Policy "\
        default-src 'self'; \
        script-src 'self' https://cdn.jsdelivr.net 'unsafe-inline'; \
        style-src 'self' https://cdnjs.cloudflare.com 'unsafe-inline'; \
        font-src 'self' https://cdnjs.cloudflare.com; \
        img-src 'self' data: https://api.qrserver.com https://*.supabase.co; \
        connect-src 'self' https://*.supabase.co https://api.resend.com; \
        media-src 'self'; \
        object-src 'none'; \
        base-uri 'self'; \
        form-action 'self'; \
        frame-ancestors 'self'"
</IfModule>

# --- Compressie (gzip/deflate) ---
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE image/svg+xml
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE application/xml
</IfModule>

# --- Cache-Control ---
<IfModule mod_expires.c>
    ExpiresActive On

    # HTML — altijd revalideren
    ExpiresByType text/html "access plus 0 seconds"

    # CSS & JavaScript — 1 week
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"

    # JSON (woordenboeken) — 1 week
    ExpiresByType application/json "access plus 1 week"

    # Afbeeldingen — 30 dagen
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 month"

    # Fonts — 1 jaar
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
</IfModule>

# Cache-Control headers voor HTML
<IfModule mod_headers.c>
    <FilesMatch "\.(html)$">
        Header set Cache-Control "no-cache, must-revalidate"
    </FilesMatch>
    <FilesMatch "\.(css|js|json)$">
        Header set Cache-Control "public, max-age=604800"
    </FilesMatch>
    <FilesMatch "\.(png|svg|ico)$">
        Header set Cache-Control "public, max-age=2592000"
    </FilesMatch>
</IfModule>
